---
import BackgroundVideo from '../components/BackgroundVideo.astro';
import ValveIcon from '../components/ValveIcon.astro';
import Layout from '../layouts/Layout.astro';
import Info from '../components/Info.astro';
import Javier from '../components/Javier.astro';
import Search from '../components/Search.astro';
---

<Layout>
    <div class="flex flex-col min-h-screen">
        <header class="flex items-center justify-between w-full py-4 px-[17vw]">
            <ValveIcon />
            <Javier />
        </header>
        <main class="flex items-center justify-between px-[15vw] my-[16vh] flex-grow">
            <Info />
            <Search />
        </main> 
        <BackgroundVideo />
        <footer class="py-4 w-full h-[15vh] bg-[#f74843]">
            Footer content
        </footer>
    </div>
</Layout>

